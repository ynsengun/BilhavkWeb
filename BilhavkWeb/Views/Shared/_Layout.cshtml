<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilhavk</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Img/3.png" />
    <link name="keyword" content="bilhavk,parasut,yamac parasutu,bilkent havacilik,bilkent yamac parasutu,bilkent universitesi,bilkent kulup,bilkent skydiving" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @*<script src="https://kit.fontawesome.com/e4561fd74c.js" crossorigin="anonymous"></script>*@
    @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">*@
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="bgtemplate">
        <img src="~/Img/paraglider1.jpg" alt="paragliding" class="coverimage" />
    </div>

    <nav class="navbar navbar-expand-lg bg-dark navbar-dark sticky-top">
        <div class="container">
            <!-- Brand -->
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <img src="~/Img/logoo.png" width="85" />
            </a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Etkinlikler", "Index", "Participant", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("İletişim", "Iletisim", "Home", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated == false)
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Register", "Security")" class="nav-link">
                                Kayıt Ol
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Security")" class="nav-link">
                                Oturum Aç
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Profil", "Profil", "Home", new { }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Oturumu Kapat", "Signout", "Security", new { }, new { @class = "nav-link" })
                        </li>
                        if (@HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <li>
                                <span class="navbar-text pl-lg-3">
                                    Hoşgeldin @HttpContext.Current.User.Identity.Name
                                </span>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div style="background-color:#eaeaea; min-height:60vh" class="pt-4 pb-3">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer style="font-size:11px;">
                <p>&copy; 2019 - Bilkent Havacılık Kulübü - Yusuf Nevzat Şengün</p>
            </footer>
        </div>
    </div>
</body>
</html>